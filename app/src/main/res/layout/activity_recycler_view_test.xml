<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recyclerViewTest.RecyclerViewTestActivity">

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="取消"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvRefresh"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="刷新"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/tvCancel"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvLoadMore"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="加载更多"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/tvRefresh"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="删除"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/tvLoadMore"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSelectAll"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="全选"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tvCancel"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>