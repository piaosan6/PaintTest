<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pjm.painttest.weight.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawStrokeCap" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawStrokeJoin" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawCornerPathEffect" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawCornerPathEffectDemo" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawDashPathEffectDemo" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawDiscretePathEffectDemo" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawPathDashPathEffect" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawPathDashPathEffectDemo" />
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawComposePathEffectDemo" />
        <Button
            android:id="@+id/btn10"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="8sp"
            android:text="drawSubpixelText" />

    </com.pjm.painttest.weight.FlowLayout>

    <com.pjm.painttest.baseTest.customView.MyView
        android:id="@+id/myView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
